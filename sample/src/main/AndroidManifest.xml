<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sample">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoadActivity" />
        <activity android:name=".activities.SampleActivity" />
        <activity android:name=".activities.SampleFragmentActivity" />
        <activity android:name=".activities.GraphActivity" />
        <activity android:name=".activities.WebViewActivity" />
        <activity android:name=".activities.ViewActivity" />
        <activity android:name=".activities.CameraActivity" />

        <service
            android:name=".ShellService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activities.InitActivity" />

        <service
            android:name=".services.ScanService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activities.DBActivity" />
        <activity android:name=".activities.PreviewActivity" />
        <activity android:name=".activities.Camera2Activity" />
        <activity
            android:name=".activities.SystemCfgActivity"
            android:label="@string/title_activity_system_cfg"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.AsyncActivity" />
        <activity android:name=".activities.PileLayoutActivity" />
        <activity
            android:name=".activities.ZZWInitActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RippleActivity" />
        <activity
            android:name=".activities.PTZSampleActivity"
            android:theme="@style/ImageTranslucentTheme" />
        <activity android:name=".activities.DouYinActivity"
            android:theme="@style/douyin_Aty"
            />
    </application>

</manifest>